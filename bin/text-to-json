#!/usr/bin/perl
# vim: ts=2 sw=2 ft=perl
eval 'exec perl -x -wS $0 ${1+"$@"}'
  if 0;
$|++;
use lib "lib";
use common::sense;
use autodie;
use Nobody::Util;
use Nobody::PP;
use Nobody::JSON;
use OpenAI::API;

our(@VERSION) = qw( 0 1 0 );
my(@text);
if(@ARGV) {
  (@text)=map { path($_)->slurp } @ARGV;
} else {
  (@text)=join( "", <STDIN> );
};
$DB::single=1;
for(map { [ $_ ] } @text) {
  say encode_json($_);
};
